<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>


	<!-- 관리자 템플릿 -->
	<definition name="adminLayout" template="/WEB-INF/views/adminTemp/layout.jsp">
		<put-attribute name="adminHeader" value="/WEB-INF/views/adminTemp/adminHeader.jsp"/>
		<put-attribute name="adminContent" value=""/>
		<put-attribute name="adminFoot" value="/WEB-INF/views/adminTemp/adminFooter.jsp"/>
	</definition>
	
	<!-- content 만들기 -->
	<definition name="*.admin" extends="adminLayout">
		<put-attribute name="adminContent" value="/WEB-INF/views/adminView/{1}.jsp"/>
	</definition>
	
	<definition name="*/*.admin" extends="adminLayout">
		<put-attribute name="adminContent" value="/WEB-INF/views/adminView/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="*/*/*.admin" extends="adminLayout">
		<put-attribute name="adminContent" value="/WEB-INF/views/adminView/{1}/{2}/{3}.jsp"/>
	</definition>
	
	<!-- 사용자 템플릿 -->
	<definition name="userLayout" template="/WEB-INF/views/userTemp/layout.jsp">
		<put-attribute name="userHeader" value="/WEB-INF/views/userTemp/header.jsp"/>
		<put-attribute name="userContent" value=""/>
		<put-attribute name="userFooter" value="/WEB-INF/views/userTemp/footer.jsp"/>
	</definition>
	
	<!-- Content 만들기 -->
	<definition name="*.users" extends="userLayout">
		<put-attribute name="userContent" value="/WEB-INF/views/userView/{1}.jsp"/>
	</definition>
	
	<definition name="*/*.users" extends="userLayout">
		<put-attribute name="userContent" value="/WEB-INF/views/userView/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="*/*/*.users" extends="userLayout">
		<put-attribute name="userContent" value="/WEB-INF/views/userView/{1}/{2}/{3}.jsp"/>
	</definition>
	
	<!-- Tiles 제외하고 오직 jsp 페이지만 나오도록 -->
	<definition name="empty" template="/WEB-INF/views/userTemp/empty.jsp">
		<put-attribute name="userContent" value=""/>
	</definition>
	
	<definition name="*.empty" extends="empty">
		<put-attribute name="userContent" value="/WEB-INF/views/userView/{1}.jsp"/>
	</definition>
	
	<definition name="*/*.empty" extends="empty">
		<put-attribute name="userContent" value="/WEB-INF/views/userView/{1}/{2}.jsp"/>
	</definition>
	
</tiles-definitions>