<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.team3.admin.book.dao.mapper">
	<select id="getAdminBookSearch" resultType="com.team3.user.book.dto.BookDto">
		select * from book
	</select>
	
	<select id="adminBookInfo" parameterType="String" resultType="com.team3.user.book.dto.BookDto">
		select * from book where isbn=#{isbn}
	</select>
	
	<select id="adminBookInfoCategory" parameterType="String" resultType="com.team3.user.book.dto.CategoryDto">
		select * from category where category_number=#{category_number}
	</select>
	
	<select id="adminBookCategogy1" resultType="String">
		select low_category from category where category_number='J11'
	</select>
	
	<select id="adminBookCategogy2" parameterType="String" resultType="String">
		select DISTINCT low_category from category where CATEGORY_PATH LIKE CONCAT('%',#{categogy1})
	</select>
</mapper>